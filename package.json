{
  "name": "bambot",
  "version": "1.0.0",
  "description": "BambooHR Slack bot publishes company holidays, work anniversaries, first days, birthdays, and who is out each weekday.",
  "license": "MIT",
  "scripts": {
    "build": "serverless webpack",
    "deploy": "npm test && serverless deploy --verbose",
    "format": "prettier --write '{,!(.serverless|.webpack)/**/}*.+(js|json|md|ts|yml)'",
    "invoke": "ENVIRONMENT=local sls invoke local -f func",
    "test": "jest",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@therockstorm/utils": "^2.1.0",
    "axios": "^0.18.0",
    "cwait": "^1.1.1",
    "dayjs": "^1.7.7",
    "source-map-support": "^0.5.9",
    "xml2js-es6-promise": "^1.1.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.13",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "serverless": "^1.32.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^23.10.4",
    "ts-lint": "^4.5.1",
    "ts-loader": "^5.2.2",
    "typescript": "^3.1.3",
    "webpack": "^4.20.2",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
